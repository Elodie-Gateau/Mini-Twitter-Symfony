<form method="post" action="{{ path('app_tweet_like', {'id': tweet.id}) }}">
    <input type="hidden" name="_token" value="{{ csrf_token('signalTweet' ~ tweet.id) }}">
    <button type="submit" class="text-red-600 font-medium cursor-pointer hover:text-red-400 duration-200 ease-in-out">
    {{ tweet.likes|length }} <i class="fa-solid fa-paw"></i></button>
</form>
