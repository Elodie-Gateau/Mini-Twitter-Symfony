{% extends 'base.html.twig' %}

{% block title %}Social Pets{% endblock %}

{% block body %}
    <h1>Social Pets</h1>

<section class="timeline">    
<a href="{{ path('app_tweet_new') }}">Cr√©er un tweet</a>
        {% for tweet in tweets %}


<div class="max-w-sm rounded overflow-hidden shadow-lg">
  <img class="w-full" src="{{ tweet.media.url_media }}" alt="Media du tweet">
  <div class="px-6 py-4">
    <div>
    <h2 class="font-bold text-xl mb-2">{{ tweet.user.name }}</h2>
    <h3>{{ tweet.creationTime ? tweet.creationTime|date('Y-m-d H:i:s') : '' }}</h3>
    </div>
    <p class="text-gray-700 text-base">
      {{ tweet.content }}
    </p>
  </div>
  <div class="px-6 pt-4 pb-2">
    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#photography</span>
    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#travel</span>
    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#winter</span>
  </div>
</div>
            <tr>

                <td>{{ tweet.content }}</td>
                <td></td>
                <td>
                    <a href="{{ path('app_tweet_show', {'id': tweet.id}) }}">show</a>
                    <a href="{{ path('app_tweet_edit', {'id': tweet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    </section>
{% endblock %}
