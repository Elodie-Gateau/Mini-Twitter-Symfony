{% extends 'base.html.twig' %}

{% block title %}Tweet actus{% endblock %}

{% block body %}


<section class="timeline">
<a class="bg-blue-500 hover:bg-orange-500 text-white font-bold py-2 px-4 border border-blue-700 rounded" href="{{ path('app_tweet_new') }}">Créer un tweet</a>
        {% for tweet in tweets %}


<div class="max-w-sm rounded overflow-hidden shadow-lg">
{% if tweet.media|length > 0 %}
{% for media in tweet.media %}
<img src="{{ media.urlMedia }}" alt="">

{% endfor %}
{% endif %}
  <div class="px-6 py-4">
    <div>
    <h2 class="font-bold text-xl mb-2">{{ tweet.idUser.nickname }}</h2>
    <h3>{{ tweet.creationTime ? tweet.creationTime|date('d-m-Y H:i:s') : '' }}</h3>
    </div>
    <p class="text-gray-700 text-base">
      {{ tweet.content }}
    </p>
  </div>
  <div class="px-6 pt-4 pb-2">
    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#tag</span>
    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#tag</span>
    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#tag</span>
  </div>                    
  <a href="{{ path('app_tweet_show', {'id': tweet.id}) }}">{{ tweet.comment|length }} commentaires</a>
  <a href="{{ path('app_tweet_edit', {'id': tweet.id}) }}">Modifier</a>
</div>
           
        {% else %}

                <p colspan="4">Aucun tweet trouvé</p>

        {% endfor %}



    </section>
{% endblock %}
