{% extends 'base.html.twig' %}

{% block title %}Modifier le profil
{% endblock %}

{% block body %}
	<h1 class="text-3xl font-extrabold text-center my-7">
		Profil de
		{{ user.name }}
		{{ user.firstname }}</h1>

	<div class="form flex flex-col items-center p-7">
		{{ include('user/_form.html.twig', {'button_label': 'Modifier'}) }}


</div>
    <div class="max-w-4xl mx-auto my-8 flex flex-col sm:flex-row justify-center space-y-4 sm:space-y-0 sm:space-x-4">
        <a href="{{ path('app_profile_show', {'id': app.user.id}) }}" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-6 rounded-lg shadow-md transition duration-300 ease-in-out text-center">
            Retour au profil
        </a>

			<form action="{{ path('app_user_desactive', {'id': app.user.id}) }}" method = "POST">
				<input class="bg-transparent hover:bg-red-500 text-red-700 font-semibold hover:text-white py-2 px-4 border border-red-500 hover:border-transparent rounded cursor-pointer w-full mt-2" type="submit" value= "Supprimer mon compte">

			</form>
	</div>
</div>
{% endblock %}
