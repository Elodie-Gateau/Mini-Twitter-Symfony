{% extends 'base.html.twig' %}

{% block title %}Profil de {{user.name}} {{user.firstName}} {% endblock %}

{% block body %}
    <h1>Profil de {{user.nickname}}</h1>

    <table class="table">
        <tbody>
            <tr>
                {# <th>Id</th>
                <td>{{ user.id }}</td> #}
            </tr>
            <tr>
                <th>Nom d'utilisateur :</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Prénom d'utilisateur :</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Email d'utilisateur :</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Age de l'utilisateur :</th>
                <td>{{ user.age }}</td>
            </tr>
            <tr>
                <th>Photo de profil :</th>
                <td>{{ user.photo }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                {# <th>Mot de Passe</th>
                <td>{{ user.password }}</td> #}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">Retour à la liste</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
