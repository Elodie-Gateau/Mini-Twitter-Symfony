<form method="post" class="delete-comment-form" data-comment-id="{{ comment.id }}" action="{{ path('app_comment_delete', {'id': comment.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
    <button class="cursor-pointer text-gray-700 dark:text-white"><i class="fa-solid fa-trash"></i></button>
</form>
