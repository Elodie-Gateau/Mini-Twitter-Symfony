<header>
	<nav class="flex items-center justify-between flex-wrap bg-orange-400 p-6">
		<div class="flex items-center flex-shrink-0 text-white mr-6">
			<img src="{{ asset('img/logo-txt.png') }}" alt="Description du logo" class="w-50 h-20"/>

		</div>
		<div class="block lg:hidden">
			<button class="flex items-center px-3 py-2 border rounded text-orange-200 border-orange-400 hover:text-white hover:border-white">
				<svg class="fill-current h-3 w-3" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
					<title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
			</button>
		</div>
		<div class="w-full block flex-grow lg:flex lg:items-center lg:w-auto">
			<div class="text-sm lg:flex-grow">
				<a class="block mt-4 lg:inline-block lg:mt-0 text-orange-200 hover:text-white mr-4" href="{{ path('app_tweet_index')}}">Accueil</a>
				{% if is_granted('ROLE_USER') %}
					<a class="block mt-4 lg:inline-block lg:mt-0 text-orange-200 hover:text-white mr-4" href="{{ path('app_profile_show', {'id': app.user.id}) }}">Profil</a>
				{% endif %}
				<a class="block mt-4 lg:inline-block lg:mt-0 text-orange-200 hover:text-white mr-4" href="#">Panel Admin</a>
				{% if not is_granted('ROLE_USER') %}
					<a class="block mt-4 lg:inline-block lg:mt-0 text-orange-200 hover:text-white mr-4" href="{{ path('app_register')}}">S'inscrire</a>
				{% endif %}
			</div>
			<div>
				{% if not is_granted('ROLE_USER') %}
					<a href="{{ path('app_login')}}" class="inline-block text-sm px-4 py-2 leading-none border rounded text-white border-white hover:border-transparent hover:text-orange-500 hover:bg-white mt-4 lg:mt-0">Se connecter</a>
				{% else %}
					<a href="{{ path('app_logout')}}" class="inline-block text-sm px-4 py-2 leading-none border rounded text-white border-white hover:border-transparent hover:text-orange-500 hover:bg-white mt-4 lg:mt-0">Se d√©connecter</a>
				{% endif %}
			</div>
		
			{% if is_granted('ROLE_USER') %}
				{% if app.user.photo %}
		             <img class="w-10 h-10 rounded ml-5" src="{{ app.user.photo }}" alt="Photo de {{ app.user.name }}">
				{% else %}
					<img class="w-10 h-10 rounded ml-5" src="{{ asset('img/personne.png') }}" alt="Photo de {{ app.user.name }}">
				{% endif %}
			{% endif %}

	</div>
</nav></header>
